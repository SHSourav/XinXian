<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="40dp"
    android:gravity="center"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:src="@drawable/login" />

    <TextView
        android:id="@+id/SignInShow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#359287"
        android:layout_marginTop="15dp"
        android:textStyle="italic"
        android:gravity="center"
        android:text="Login"
        android:textSize="20dp"
        />

    <EditText
        android:id="@+id/SignInPhone"
        android:layout_width="match_parent"
        android:hint="Phone Number"
        android:textColorHint="#252424"
        android:inputType="phone"
        android:layout_marginTop="30dp"
        android:textSize="15dp"
        android:layout_height="wrap_content"
        android:ems="13"/>

    <EditText
        android:id="@+id/SignInPass"
        android:layout_width="match_parent"
        android:hint="Password"
        android:textColorHint="#312B2B"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:inputType="textPassword"
        android:ems="13" />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView android:id="@+id/Forgot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#332D2D"
            android:text="Forgot Password?"
            android:textAlignment="textEnd"
            android:textStyle="italic"
            android:layout_marginLeft="20dp"
            android:textSize="12dp"
            />

    </LinearLayout>



    <Button
        android:id="@+id/btnLogin"
        android:background="#E91E63"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:textStyle="italic"
        android:text="Login" />



    <TextView
        android:id="@+id/Register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:onClick="onClick"
        android:text="New here? Register here"
        android:textStyle="italic|bold"
        android:textColor="@color/colorPrimary"
        android:textSize="19dp" />


    <ProgressBar
        android:visibility="gone"
        android:id="@+id/progressId"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>