<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".AddNotification">


    <com.jcminarro.roundkornerlayout.RoundKornerFrameLayout
        android:id="@+id/update_round"
        android:layout_width="220dp"
        android:layout_height="170dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edit_round"
        app:corner_radius="15dp"
        android:layout_gravity="center_horizontal">




        <ImageView
            android:id="@+id/NotificationImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/addproductimage"></ImageView>


    </com.jcminarro.roundkornerlayout.RoundKornerFrameLayout>

    <Button
        android:id="@+id/AddNotification"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="10dp"
        android:text="Add Notification"></Button>
    <Button
        android:id="@+id/ViewNotification"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="10dp"
        android:text="View Notification"></Button>

</LinearLayout>