<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardBackgroundColor="#FFF"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        >

        <TextView
            android:id="@+id/admin_order_view_total"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Total"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:textStyle="bold"/>




        <TextView
            android:id="@+id/admin_order_view_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:layout_marginTop="7dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/admin_order_view_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="7dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/admin_order_view_number"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Mobile Number"
            android:gravity="center_vertical"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="7dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:orientation="vertical"
        >


        <TextView
            android:id="@+id/admin_order_view_date"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="Time"
            android:textColor="@color/colorPrimary"
            android:textSize="10dp"
            android:gravity="center_vertical|end"
            android:layout_marginRight="5dp"
            android:textStyle="bold|italic"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            />
        <Button
            android:id="@+id/admin_order_view_listbtn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:text="View List"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:layout_marginEnd="30dp"
            android:background="@drawable/round_button"/>

        <Button
            android:id="@+id/admin_order_view_call"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:text="Call"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:layout_marginEnd="30dp"
            android:background="@drawable/round_button"/>
    </LinearLayout>




</androidx.cardview.widget.CardView>