<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="40dp"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/setting"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/SignUpShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:text="Profile Settings"
            android:textSize="23dp"
            android:textStyle="italic"
            android:gravity="center"/>
        <EditText
            android:id="@+id/myAccountName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Name"
            android:textSize="18dp"
            android:textColor="#0A0A0A"
            android:ems="10"/>

        <TextView
            android:id="@+id/myAccountPhone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:hint="Phone Number"
            android:gravity="center_vertical"
            android:padding="2dp"
            android:layout_marginLeft="2dp"
            android:textSize="18dp"
            android:textColor="#0A0A0A"
            android:inputType="phone"
            android:ems="10"/>



        <EditText
            android:id="@+id/myAccountEmail"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:hint="Email"
            android:textSize="18dp"
            android:textColor="#0A0A0A"
            android:layout_height="wrap_content"
            android:ems="10"/>
        >

        <EditText
            android:id="@+id/myAccountAddress"
            android:layout_width="match_parent"
            android:hint="Address"
            android:textSize="18dp"
            android:textColor="#0A0A0A"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:ems="10"/>
        >
        <EditText
            android:id="@+id/myAccountPass"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:hint="Password"
            android:textSize="18dp"
            android:textColor="#0A0A0A"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Security Answer"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            >
        </TextView>

        <EditText
            android:id="@+id/myAccountSQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:inputType="date"
            android:hint="Security Answer"
            >

        </EditText>
        <Button
            android:id="@+id/myAccountUpdateBtn"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textStyle="italic"
            android:text="Update Profile" />


        <ProgressBar
            android:visibility="gone"
            android:id="@+id/progressId"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>